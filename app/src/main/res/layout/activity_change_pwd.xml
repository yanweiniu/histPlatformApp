<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F9">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/common_actionbar_bg">
        <ImageView
            style="@style/Widget.Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/common_actionbar_textsize"
            android:textColor="@color/common_actionbar_textcolor"
            android:text="@string/common_tabbar_label_changepwd"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_changePwd_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:textSize="@dimen/common_smaller_text_size"
            android:textColor="@color/common_no_changepwd_textcolor"
            android:enabled="false"
            android:text="确定"/>
    </FrameLayout>
    <EditText
        android:id="@+id/et_changePwd_old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edittext_height"
        android:background="@drawable/common_edittext_pwd_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入旧密码"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/common_smaller_text_size"
        android:inputType="textPassword"
        android:padding="10dp"
        android:maxLength="15"/>
    <EditText
        android:id="@+id/et_changePwd_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edittext_height"
        android:background="@drawable/common_edittext_pwd_bg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入新密码"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/common_smaller_text_size"
        android:inputType="textPassword"
        android:padding="10dp"
        android:maxLength="15"/>
    <EditText
        android:id="@+id/et_changePwd_reNew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edittext_height"
        android:background="@drawable/common_edittext_pwd_bg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="确认新密码"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/common_smaller_text_size"
        android:inputType="textPassword"
        android:padding="10dp"
        android:maxLength="15"/>
</LinearLayout>