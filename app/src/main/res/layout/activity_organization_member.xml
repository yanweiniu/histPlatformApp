<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marchsoft.organization.OrganizationMemberActivity">
    <FrameLayout
        android:id="@+id/organization_member_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/common_actionbar_bg">
        <ImageView
            style="@style/Widget.Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/organization_member"
            android:textSize="@dimen/common_actionbar_textsize"
            android:textColor="@color/common_actionbar_textcolor"
            android:gravity="center"/>
    </FrameLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/org_member_pull_to_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.Scrollbar"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/organization_member_top_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:text="会长、副会长"
                android:textColor="#BA55D3"
                android:background="#BFF4F4"/>
            <LinearLayout
                android:id="@+id/org_member_president_linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.marchsoft.organization.widget.AutoHeightListView
                    android:id="@+id/org_member_president_listVIew"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@android:color/transparent"
                    android:focusable="true">
                </com.marchsoft.organization.widget.AutoHeightListView>
            </LinearLayout>
            <TextView
                android:id="@+id/organization_member_freshman_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="大一"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:drawableRight="@drawable/common_arrow_down_selector"
                android:background="@drawable/common_textview_boder"/>/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.marchsoft.organization.widget.AutoHeightListView
                    android:id="@+id/org_member_freshman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:listSelector="@android:color/transparent"
                    android:visibility="gone">
                </com.marchsoft.organization.widget.AutoHeightListView>
                <TextView
                    android:id="@+id/organization_member_freshman_nodata_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无数据"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/organization_member_sophsmore_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="大二"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:drawableRight="@drawable/common_arrow_down_selector"
                android:background="@drawable/common_textview_boder"/>
            />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.marchsoft.organization.widget.AutoHeightListView
                    android:id="@+id/org_member_sophomore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:listSelector="@android:color/transparent"
                    android:visibility="gone">
                </com.marchsoft.organization.widget.AutoHeightListView>
                <TextView
                    android:id="@+id/organization_member_sophmore_nodata_text_nodata_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无数据"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/organization_member_junior_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="大三"
                android:paddingLeft="5dp"
                android:clickable="true"
                android:textColor="#000000"
                android:drawableRight="@drawable/common_arrow_down_selector"
                android:background="@drawable/common_textview_boder"/>
            />
            <com.marchsoft.organization.widget.AutoHeightListView
                android:id="@+id/org_member_junior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:listSelector="@android:color/transparent"
                android:visibility="gone">
            </com.marchsoft.organization.widget.AutoHeightListView>
            <TextView
                android:id="@+id/organization_member_junior_nodata_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/organization_member_senior_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="大四"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:drawableRight="@drawable/common_arrow_down_selector"
                android:background="@drawable/common_textview_boder"/>
            />
            <com.marchsoft.organization.widget.AutoHeightListView
                android:id="@+id/org_member_senior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:listSelector="@android:color/transparent"
                android:visibility="gone">
            </com.marchsoft.organization.widget.AutoHeightListView>
            <TextView
                android:id="@+id/organization_member_senior_nodata_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
