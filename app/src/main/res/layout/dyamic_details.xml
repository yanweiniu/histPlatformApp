<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/common_actionbar_bg">

        <ImageView
            style="@style/Widget.Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/main_dynamic_details"
            android:textColor="@color/common_actionbar_textcolor"
            android:textSize="@dimen/common_actionbar_textsize" />

    </FrameLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/Widget.Scrollbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#16B7BC"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/organization_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/organization_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_activity_padding"
                    android:textColor="#052B2C"
                    android:textSize="@dimen/common_normal_text_size"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="活动名称："/>
                <TextView
                    android:id="@+id/activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:text="活动主题："/>
                <TextView
                    android:id="@+id/activity_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/common_activity_padding"
                android:paddingLeft="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_activity_padding"
                    android:paddingBottom="@dimen/common_activity_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:text="负责人　："/>
                <TextView
                    android:id="@+id/activity_supervisor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_supervisor_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="@dimen/common_activity_padding"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingRight="15dp"
                    android:drawablePadding="@dimen/common_activity_padding"
                    android:drawableRight="@drawable/common_arrow_right_selector" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="时间开始："/>
                <TextView
                    android:id="@+id/activity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="结束时间："/>
                <TextView
                    android:id="@+id/activity_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="活动地点："/>
                <TextView
                    android:id="@+id/activity_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="活动形式："/>
                <TextView
                    android:id="@+id/activity_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:gravity="center"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="报名人数："/>
                <TextView
                    android:id="@+id/activity_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/activity_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/common_activity_padding"
                    android:layout_marginRight="@dimen/common_activity_padding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_activity_padding"
                android:background="@drawable/common_tv_line_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/main_activity_details_padding"
                    android:paddingRight="@dimen/common_activity_padding"
                    android:text="活动宣言："/>
                <TextView
                    android:id="@+id/activity_declaration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>