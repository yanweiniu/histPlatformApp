
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_alert_dialog_msg"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/common_actionbar_bg"
            android:text="选择性别"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/alertdialog_msg_textcolor"
            android:textSize="@dimen/common_larger_text_size" />
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_alignBottom="@id/tv_alert_dialog_msg">
            <ScrollView
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:scrollbars= "none"
                >
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="140dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="男"
                        android:background="@drawable/alert_dialog_list_selector"
                        android:clickable="true"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="@dimen/common_normal_text_size"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/common_mine_line_bg"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="女"
                        android:background="@drawable/alert_dialog_list_selector"
                        android:clickable="true"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="@dimen/common_normal_text_size"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/common_mine_line_bg"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_alert_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:textColor="@drawable/alert_dialog_button_selector"
                android:padding="15dp"
                android:text="取消"
                android:background="#ffffff"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_alert_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:textColor="@drawable/alert_dialog_button_selector"
                android:padding="15dp"
                android:text="确定"
                android:background="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>






