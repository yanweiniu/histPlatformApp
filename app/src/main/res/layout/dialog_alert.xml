<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/alertdialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/alertdialog_msg_bg"
        android:minHeight="80dp"
        android:padding="20dp"
        android:textColor="@color/alertdialog_msg_textcolor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alert_dialog_msg"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alert_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_button_selector"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/common_activity_bg"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alert_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_button_selector"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/common_activity_bg"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>