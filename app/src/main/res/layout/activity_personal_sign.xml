<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_activity_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0FAAAF"
        android:orientation="horizontal">
        <ImageView
            style="@style/Widget.Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人说明"
            android:textColor="#F8FCFC"
            android:layout_weight="1"
            android:textSize="@dimen/common_actionbar_textsize"
            android:gravity="center"/>
        <TextView
            android:id="@+id/personal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#F8FCFC"
            android:paddingRight="12dp"
            android:textSize="@dimen/common_normal_text_size"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/personal_sign"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <EditText
            android:id="@+id/personal_sign_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/mine_feedback_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:text="127"/>
    </RelativeLayout>
</LinearLayout>