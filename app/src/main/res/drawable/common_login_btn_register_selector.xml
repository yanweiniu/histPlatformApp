<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/mine_button_enroll"/>
            <corners android:radius="5dp" />

            <padding
                android:left="10dp"
                android:right="10dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/mine_button_enroll_pressed"/>
            <corners android:radius="5dp" />

            <padding
                android:left="10dp"
                android:right="10dp" />

        </shape>
    </item>

</selector>