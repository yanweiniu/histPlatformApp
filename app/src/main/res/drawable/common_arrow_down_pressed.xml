<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <size
                android:width="2dp"
                android:height="15dp" />
        </shape>
    </item>

    <item android:bottom="3dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotY="92%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/common_textcolor_main" />
                <corners android:radius="1dp" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="3dp">
        <rotate
            android:fromDegrees="45"
            android:pivotY="92%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/common_textcolor_main" />
                <corners android:radius="1dp" />
            </shape>
        </rotate>
    </item>


</layer-list>