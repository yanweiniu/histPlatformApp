<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_activity_bg</item>
        <item name="android:textSize">@dimen/common_normal_text_size</item>
        <item name="android:textColor">@color/common_textcolor_secondary</item>
        <item name="android:textColorHint">@color/common_textcolor_hint</item>
    </style>

    <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Widget.Back" parent="Widget">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/common_btn_back_selector</item>
        <item name="android:onClick">onBackClick</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Widget.Scrollbar" parent="Widget">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/common_scrollbar_thumb_vertical</item>
        <item name="android:scrollbarTrackVertical">@drawable/common_scrollbar_track_vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/common_scrollbar_thumb_vertical
        </item>
        <item name="android:scrollbarTrackHorizontal">@drawable/common_scrollbar_track_vertical
        </item>
    </style>

    <style name="Widget.PullToRefreshListView" parent="Widget.Scrollbar">
        <item name="android:divider">@color/common_listview_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
    <style name="typeListView" parent="Widget.Scrollbar">
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/common_listitem_selector</item>
    </style>
    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/inputtodown</item>
        <item name="android:windowExitAnimation">@anim/outputtoup</item>
    </style>
    <!--DynamicPage_item_style-->
    <style name="DynamicItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Widget.ArrowRight" parent="Widget">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/common_arrow_right_selector</item>
    </style>


</resources>
